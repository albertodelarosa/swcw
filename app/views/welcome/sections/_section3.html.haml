- panel_type = "default"
- li_index = 1
- ul_name = "appointments_left"
- ul_id = "#{ ul_name }_id"
- accordian = { panel_type: panel_type, parent_id: ul_id }

.col-xs-12
  %legend.lead Appointments
.col-xs-12.col-md-6
  %ul{ id: ul_id }

    - accordian[ :heading_id ] = "#{ ul_name }-heading#{ li_index }-id"
    - accordian[ :body_id ] = "#{ ul_name }-body#{ li_index }-id"
    - accordian[ :accordian_body ] = content_tag :ul do
      = li_content( "Siteler is the figurehead of our company. His name is Siteler because he’s your OnSite Butler. He is there to serve you and save you time. You can read more about Siteler here." )
    - accordian[ :accordian_heading ] = content_tag( :h3, "Who is Siteler?" )
    = render "welcome/sections/section_li", accordian: accordian

    - li_index += 1
    - accordian[ :heading_id ] = "#{ ul_name }-heading#{ li_index }-id"
    - accordian[ :body_id ] = "#{ ul_name }-body#{ li_index }-id"
    - accordian[ :accordian_body ] = content_tag :ul do
      = li_content( "At Siteler Wash, scheduling services in advance not only guarantees you one of our limited wash, wax or detail spots it also saves you money by giving you Free Siteler Dollars (link to discount question above). Advanced scheduling is also worry-free because we remind you several days before your appointment, and you can always reschedule or cancel it at any time. You can read more about canceling and rescheduling below." )
    - accordian[ :accordian_heading ] = content_tag( :h3, "Why is Advanced Scheduling worry-free and easy to change?" )
    = render "welcome/sections/section_li", accordian: accordian

- li_index = 1
- ul_name = "appointments_right"
- ul_id = "#{ ul_name }_id"
- accordian = { panel_type: panel_type, parent_id: ul_id }

.col-xs-12.col-md-6
  %ul{ id: ul_id }

    - accordian[ :heading_id ] = "#{ ul_name }-heading#{ li_index }-id"
    - accordian[ :body_id ] = "#{ ul_name }-body#{ li_index }-id"
    - accordian[ :accordian_body ] = content_tag :ul do
      = li_content( "You can easily change or reschedule your service online in the Account Management section of our web site while signed in." )
      = li_content( "We will always remind you over email about your appointment several days in advance, and you can change it at any time up until the end of the day of your appointment with no penalty. After that it’s considered a missed appointment. Read more about missed appointments here. Any time you cancel your service, before it’s “missed” we will credit your account for the full value of the service. The next time you visit us to schedule an appointment, you will see your credited amount in your Siteler Dollar balance. As always, those Siteler Dollars can be applied against any new service you schedule." )
    - accordian[ :accordian_heading ] = content_tag( :h3, "How do I change an appointment?" )
    = render "welcome/sections/section_li", accordian: accordian

    - li_index += 1
    - accordian[ :heading_id ] = "#{ ul_name }-heading#{ li_index }-id"
    - accordian[ :body_id ] = "#{ ul_name }-body#{ li_index }-id"
    - accordian[ :accordian_body ] = content_tag :ul do
      = li_content( "You can change or cancel your appointment up until the end of the day of your appointment with no penalty. If you miss your appointment without canceling or changing, it doesn’t give us enough time to shift our Siteler Certified washers around, or fill your reserved slot with someone else. Hence, we will refund your account with your full credit minus a 5% Missed Appointment fee." )
    - accordian[ :accordian_heading ] = content_tag( :h3, "What happens if I miss an appointment or cancel my service?" )
    = render "welcome/sections/section_li", accordian: accordian

.col-xs-12
  %legend.lead Siteler Dollars
- li_index = 1
- ul_name = "sDollars-left"
- ul_id = "#{ ul_name }_id"
- accordian = { panel_type: panel_type, parent_id: ul_id }

.col-xs-12.col-md-6
  %ul{ id: ul_id }

    - accordian[ :heading_id ] = "#{ ul_name }-heading#{ li_index }-id"
    - accordian[ :body_id ] = "#{ ul_name }-body#{ li_index }-id"
    - accordian[ :accordian_body ] = content_tag :ul do
      = li_content( "Siteler Dollars are just like real money at Siteler Wash. You buy them with real money and then use them to purchase Siteler Wash services. Depending on the amount of Siteler Dollars you purchase at one time, you can earn up to 45% more for FREE! Whatever you don’t use immediately is saved in your account for future use." )
    - accordian[ :accordian_heading ] = content_tag( :h3, "What are Siteler Dollars and how are they used?" )
    = render "welcome/sections/section_li", accordian: accordian

- li_index = 1
- ul_name = "sDollars-right"
- ul_id = "#{ ul_name }_id"
- accordian = { panel_type: panel_type, parent_id: ul_id }

.col-xs-12.col-md-6
  %ul{ id: ul_id }

    - accordian[ :heading_id ] = "#{ ul_name }-heading#{ li_index }-id"
    - accordian[ :body_id ] = "#{ ul_name }-body#{ li_index }-id"
    - accordian[ :accordian_body ] = content_tag :ul do
      = content_tag( :p, "You earn Free Siteler Dollars in three ways:" )
      = li_content( "1) Volume Ordering: Depending on the amount of Siteler Dollars you purchase at one time, you can earn up to 40% more for Free!" )
      = li_content( "2) Advanced Scheduling: Every time you schedule a service more than one day in advance, we give you 5% of the price of that service in Free Siteler Dollars!" )
      = li_nested_ul( "Plus, when you schedule in advance:" ) do
        = li_content( "You guarantee one of our limited wash spots that day" )
        = li_content( "You can change your date of service at any time*" )
        = li_content( "You get a service reminder by email several days before your service" )
        = li_content( "* If you miss an appointment without canceling or rescheduling, it does not give us the opportunity to fill your spot or plan our staffing properly, so there is a 5% “no show” fee." )
      = li_content( "3) Promotions: From time to time, special Siteler Wash promotions may include Free Siteler Dollars for you to earn. Examples of current promotions are Refer-a-friend and Ambassador." )
      = li_nested_ul( "Let's look at an example:" ) do
        = li_content( "If you scheduled $400 worth of services in advance, you would earn 20 Free Siteler Dollars (5% bonus), bringing the cost of your purchase down to $380. Then, if you purchased the Platinum level of Siteler Dollars, you would get another 150 Free Siteler Dollars, bringing the cost of your purchase down to $230! That’s a savings of 42.5%! Plus you’d have 270 Siteler Dollars left over for future purchases." )
    - accordian[ :accordian_heading ] = content_tag( :h3, "How do I earn Free Siteler Dollars?" )
    = render "welcome/sections/section_li", accordian: accordian

