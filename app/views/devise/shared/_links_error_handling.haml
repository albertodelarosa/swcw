.hidden-xs
  .col-xs-12
    .container-fluid
      .form-group
        .btn-group.btn-group-justified{role: "group"}
          - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
            .btn-group
              = link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-warning", role: "button"
          - if devise_mapping.confirmable? && controller_name != 'confirmations'
            .btn-group
              = link_to "Resend confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-warning", role: "button"
          - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
            .btn-group
              = link_to "Resend unlock instructions?", new_unlock_path(resource_name), class: "btn btn-warning", role: "button"
.visible-xs-block
  .col-xs-12
    .container-fluid
      .form-group
        - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          = link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-warning btn-block", role: "button"
  .col-xs-12
    .container-fluid
      .form-group
        - if devise_mapping.confirmable? && controller_name != 'confirmations'
          = link_to "Resend confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-warning btn-block", role: "button"
  .col-xs-12
    .container-fluid
      .form-group
        - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
          = link_to "Resend unlock instructions?", new_unlock_path(resource_name), class: "btn btn-warning btn-block", role: "button"

