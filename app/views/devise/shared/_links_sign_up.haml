- if devise_mapping.registerable? && controller_name != 'registrations'
  .hidden-xs
    = link_to "register", new_registration_path(resource_name), class: "btn btn-raised btn-success", role: "button"
  .visible-xs-block
    = link_to "register", new_registration_path(resource_name), class: "btn btn-raised btn-success btn-block", role: "button"

