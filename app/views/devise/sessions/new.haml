.container
  .row
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-horizontal col-sm-offset-1 col-md-offset-1 col-sm-9 col-md-9'}, role: 'role') do |f|
      .panel.panel-primary
        .panel-heading
          %h4 Sign in
        .panel-body
          .form-group
            = f.label :email, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
            .col-sm-6.col-md-6
              = f.email_field :email, placeholder: "email", class: "form-control", autofocus: true
          .form-group
            = f.label :username, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
            .col-sm-6.col-md-6
              = f.text_field :username, placeholder: "username", class: "form-control", autofocus: true
          .form-group
            = f.label :password, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
            .col-sm-6.col-md-6
              = f.password_field :password, placeholder: "password", class: "form-control"
          - if devise_mapping.rememberable?
            .form-group
              .col-sm-offset-4.col-md-offset-4.col-sm-3.col-md-3
                .checkbox
                  = f.label :remember_me do
                    = f.check_box :remember_me
                    remember me
        .panel-footer
          .pull-right
            = f.submit "Sign in", class: "btn btn-success"
          .btn-group
            = render "devise/shared/links"
