#welcome_modal.modal.modal-primary.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}, role: 'form') do |f|
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{aria: {label: "Close"}, data: {dismiss: "modal"}, type: "button"}
            %span{aria: {hidden: true}}
              .h1 &times;
          %h4#myModalLabel.modal-title create an account
        .modal-body
          = render partial: "/devise/registrations/panels/login_info", locals: {f: f}
        .modal-footer
          = f.submit "register", class: 'btn btn-success btn-block'

