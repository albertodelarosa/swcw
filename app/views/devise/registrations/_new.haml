.container
  .row
    - unless user_signed_in?
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}, role: 'role') do |f|
        .panel.panel-success
          .panel-heading
            %h3
              Register an Account
          .panel-body
            .panel.panel-primary
              .panel-heading
                User Information
              .panel-body
                .form-group
                  = f.label :username, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                  .col-sm-6.col-md-6
                    = f.text_field :username, class: "form-control", placeholder: "username", :autofocus => true
                .form-group
                  = f.label :email, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                  .col-sm-6.col-md-6
                    = f.email_field :email, class: "form-control", placeholder: "email"
                .form-group
                  = f.label :password, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                  .col-sm-6.col-md-6
                    = f.password_field :password, class: "form-control", placeholder: "password"
                .form-group
                  = f.label :password_confirmation, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                  .col-sm-6.col-md-6
                    = f.password_field :password_confirmation, class: "form-control", placeholder: "password confirmation"
                - if devise_mapping.rememberable?
                  .form-group
                    .col-sm-offset-4.col-md-offset-4.col-sm-3.col-md-3
                      .checkbox
                        = f.label :remember_me do
                          = f.check_box :remember_me
                          remember me
            .panel.panel-primary
              .panel-heading
                Business Contact Information
              .panel-body
                - resource.work_contact_info ||= resource.build_work_contact_info
                = f.fields_for :work_contact_info do |wci|
                  .form-group
                    = f.label :email, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = wci.text_field :email, class: "form-control", placeholder: "email"
                  .form-group
                    = f.label :mobile, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = wci.text_field :mobile, class: "form-control", placeholder: "mobile"
                  .form-group
                    = f.label :phone1, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = wci.text_field :phone1, class: "form-control", placeholder: "phone 1"
                  .form-group
                    = f.label :ext, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-4.col-md-4
                      = wci.text_field :ext, class: "form-control", placeholder: "ext"
                  .form-group
                    = f.label :phone2, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = wci.text_field :phone2, class: "form-control", placeholder: "phone 2"
                  .form-group
                    = f.label :fax, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = wci.text_field :fax, class: "form-control", placeholder: "fax"
            .panel.panel-primary
              .panel-heading
                Business Address Information
              .panel-body
                - resource.work_address ||= resource.build_work_address
                = f.fields_for :work_address do |wa|
                  .form-group
                    = f.label :street1, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = wa.text_field :street1, class: "form-control", placeholder: "street address 1"
                  .form-group
                    = f.label :suite_no, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = wa.text_field :suite_no, class: "form-control", placeholder: "suite number"
                  .form-group
                    = f.label :street2, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = wa.text_field :street2, class: "form-control", placeholder: "street address 2"
                  .form-group
                    = f.label :city, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = wa.text_field :city, class: "form-control", placeholder: "city"
                  .form-group
                    = f.label :state, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = wa.text_field :state, class: "form-control", placeholder: "state"
                  .form-group
                    = f.label :zip, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = wa.text_field :zip, class: "form-control", placeholder: "zip code"
            .panel.panel-primary
              .panel-heading
                Personal Contact Information
              .panel-body
                - resource.home_contact_info ||= resource.build_home_contact_info
                = f.fields_for :home_contact_info do |hci|
                  .form-group
                    = f.label :mobile, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = hci.text_field :mobile, class: "form-control", placeholder: "mobile number"
                  .form-group
                    = f.label :phone1, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = hci.text_field :phone1, class: "form-control", placeholder: "phone number 1"
                  .form-group
                    = f.label :phone2, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = hci.text_field :phone2, class: "form-control", placeholder: "phone number 2"
                  .form-group
                    = f.label :fax, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = hci.text_field :fax, class: "form-control", placeholder: "fax number"
            .panel.panel-primary
              .panel-heading
                Personal Address Information
              - resource.home_address ||= resource.build_home_address
              .panel-body
                = f.fields_for :home_address do |ha|
                  .form-group
                    = f.label :street1, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = ha.text_field :street1, class: "form-control", placeholder: "street address 1"
                  .form-group
                    = f.label :apt_no, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = ha.text_field :apt_no, class: "form-control", placeholder: "apt no."
                  .form-group
                    = f.label :street2, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = ha.text_field :street2, class: "form-control", placeholder: "street address 2"
                  .form-group
                    = f.label :city, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = ha.text_field :city, class: "form-control", placeholder: "city"
                  .form-group
                    = f.label :state, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = ha.text_field :state, class: "form-control", placeholder: "state"
                  .form-group
                    = f.label :zip, class: 'control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3'
                    .col-sm-6.col-md-6
                      = ha.text_field :zip, class: "form-control", placeholder: "zip code"
          .panel-footer
            .pull-right
              = render "devise/shared/links_sign_in"
            .btn-group
              = f.submit "register", class: 'btn btn-large btn-success'
              = render "devise/shared/links_omniauthable"
              %button.btn.btn-danger{"data-dismiss" => "modal", :type => "button"} cancel



