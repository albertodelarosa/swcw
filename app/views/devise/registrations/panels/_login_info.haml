=BootstrapHelper::Panel.new(class: 'primary') do |panel|
  -panel.heading() do
    -panel.title() do
      .h4
        login information
  - panel.body do
    .row
      .col-xs-12.col-sm-6
        .container-fluid
          .form-group
            .input-group
              %span.input-group-addon first name
              = f.text_field :first_name, class: "form-control", autofocus: true
      .col-xs-12.col-sm-6
        .container-fluid
          .form-group
            .input-group
              %span.input-group-addon last name
              = f.text_field :last_name, class: "form-control"
    .row
      .col-xs-12
        .container-fluid
          .form-group
            .input-group
              %span.input-group-addon username
              = f.text_field :username, class: "form-control"
    .row
      .col-xs-12
        .container-fluid
          .form-group
            .input-group
              %span.input-group-addon email
              = f.email_field :email, class: "form-control"
    - unless controller.controller_name.eql?("welcome") && controller.action_name.eql?("index")
      .row
        .col-xs-12
          .container-fluid
            .form-group
            .input-group
              %span.input-group-addon current password
              = f.password_field :current_password, class: "form-control", data: {toggle: "tooltip", placement: "top"}, title: "(leave blank )"
    .row
      .col-xs-12.col-sm-6
        .container-fluid
          .form-group
            .input-group
              %span.input-group-addon password
              = f.password_field :password, class: "form-control", data: {toggle: "tooltip", placement: "top"}, title: "(leave blank if you don't want to change it)"
      .col-xs-12.col-sm-6
        .container-fluid
          .form-group
            .input-group
              %span.input-group-addon confirm password
              = f.password_field :password_confirmation, class: "form-control"
    - if devise_mapping.rememberable?
      .row
        .col-xs-12.col-sm-6
          .container-fluid
            .form-group
              .checkbox
                = f.label :remember_me do
                  = f.check_box :remember_me
                  remember me
