
.row
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-horizontal'}) do |f|
    .panel.panel-primary
      .panel-heading
        %h4 Sign in
      .panel-body
        .form-group
          = f.label :username, class: "control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3"
          .col-sm-6.col-md-6
            = f.text_field :username, placeholder: "username", class: "form-control", autofocus: true
        .form-group
          = f.label :password, class: "control-label col-sm-offset-1 col-md-offset-1 col-sm-3 col-md-3"
          .col-sm-6.col-md-6
            = f.password_field :password, placeholder: "password", class: "form-control"
      .panel-footer
        .btn-group.pull-right
          = f.submit "sign in", class: 'btn btn-success line-height-20px'
          %button.btn.btn-primary{data: {toggle: "modal", target: "#myModal"}}sign up
        .btn-group
          = render "devise/shared/links_error_handling"
        %br
        .btn-group
          = render "devise/shared/links_omniauthable"

