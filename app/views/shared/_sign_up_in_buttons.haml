= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-horizontal col-sm-6 col-md-6'}) do |f|
  .form-group
    = f.label :username, class: "sr-only"
    = f.text_field :username, autofocus: true, placeholder: "username", class: "form-control"
  .form-group
    = f.label :password, class: "sr-only"
    = f.password_field :password, placeholder: "password", class: "form-control"
  .form-group
    - if devise_mapping.omniauthable?
      - resource_class.omniauth_providers.each do |provider|
        = link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider)

  .form-group
    .btn-group
      = f.submit "sign in", class: 'btn btn-success'
      %button.btn.btn-primary{data: {toggle: "modal", target: "#myModal"}}sign up

