- if user_signed_in?
  .breadcrumb-container
    %ol.breadcrumb
      - @breadcrumbs.each_with_index do |breadcrumb, index|
        - name = breadcrumb[0]
        - path = breadcrumb[1]
        - icon = breadcrumb[2]
        -if index == @breadcrumbs.size-1
          %li.active
            -if name.eql?("home")
              %span{class: "glyphicon #{icon}"}
            -else
              - if icon
                %span{class: "glyphicon #{icon}"}
              = name
        -else
          %li
            -if name.eql?("home")
              = link_to path do 
                %span{class: "glyphicon #{icon}"}
            -else
              = link_to path do 
                - if icon
                  %span{class: "glyphicon #{icon}"}
                = name

