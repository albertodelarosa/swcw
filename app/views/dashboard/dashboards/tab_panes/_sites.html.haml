.row
  .col-ms-12.col-md-12
    - if @sites.empty?
      = render 'dashboard/sites/form'
    - else
      - site = @sites.pop
      - unless site.nil?
        %legend current site
        .well.col-xs-12
          %legend= site.name
          .col-xs-12.col-sm-3
            = image_tag("holder.png", class: "img-responsive")
          .col-xs-12.col-sm-9
            .form-group
              .sr-only= ""
              .form-control= site.address.street1
            .form-group
              .sr-only= ""
              .form-control= site.address.street2
            .form-group
              .sr-only= ""
              .form-control= site.address.city
            .form-group
              .sr-only= ""
              .form-control= site.address.state
            .form-group
              .sr-only= ""
              .form-control= site.address.zip

        - unless @sites.empty?
          %legend
            = @sites.size > 1 ? "previous sites" : "previous site"
          - @sites.reverse.each do |site|
            .well.col-xs-12
              %legend= site.name
              .col-xs-12.col-sm-3
                = image_tag("holder.png", class: "img-responsive")
              .col-xs-12.col-sm-9
                .form-group
                  .sr-only= ""
                  .form-control= site.address.street1
                .form-group
                  .sr-only= ""
                  .form-control= site.address.street2
                .form-group
                  .sr-only= ""
                  .form-control= site.address.city
                .form-group
                  .sr-only= ""
                  .form-control= site.address.state
                .form-group
                  .sr-only= ""
                  .form-control= site.address.zip

