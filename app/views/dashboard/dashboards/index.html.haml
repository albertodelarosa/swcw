.row
  .container
    = BootstrapHelper::Panel.new(contextual: 'panel-primary', title:"", footer: '') do |panel|
      - panel.header(header_class: "#{controller.controller_name}_#{controller.action_name}") do
        = render partial: 'shared/panel_header', locals: {title: "Dashboard"}
      - panel.body do
        - opts={navs: 'nav-tabs', nav_tab_id: 'dashboardTab', tab_content_id: 'dashboardTabContent'}
        = BootstrapHelper::Nav.new(opts) do |nav|
          - nav.nav_li(active: "", a_href: '#appointments') do
            Appointments
          - nav.nav_li(a_href: '#sites') do
            Sites
          - nav.nav_li(a_href: '#companies') do
            Companies
          - nav.nav_li(a_href: '#vehicles') do
            Vehicles
          - nav.nav_pane(tab_id: 'appointments', active: '') do
            .row
              .col-ms-12.col-md-12
                = BootstrapHelper::Panel.new(contextual: 'panel-info', title:"") do |panel|
                  - panel.header_col(col_size: 6) do
                    %h4= "Make appointment #{current_user.first_name}"
                  - panel.body do
                    %p
                      TODO
              .col-ms-12.col-md-12
                = BootstrapHelper::Panel.new(contextual: 'panel-info', title:"") do |panel|
                  - panel.header_col(col_size: 6) do
                    %h4= "Past Appointments #{current_user.first_name}"
                  - panel.body do
                    %p
                      TODO
          - nav.nav_pane(tab_id: 'sites') do
            = render "dashboard/dashboards/tab_panes/sites"
          - nav.nav_pane(tab_id: 'companies') do
            = render "dashboard/dashboards/tab_panes/companies"
          - nav.nav_pane(tab_id: 'vehicles') do
            = render "dashboard/dashboards/tab_panes/vehicles"
      - panel.footer do 
        .col-sm-12.col-md-12
          .h4
            Sitelerwash - your onsite butler

