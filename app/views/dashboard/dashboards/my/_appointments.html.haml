- unless appointments.empty?
  %h2
    =appointments.size > 1 ? "next appointment" : "next appointments"
  .row
    -appointments.each do |appointment|
      .col-sm-6.col-sm-12
        .panel.panel-warning-dark.appointment-format
          .panel-heading
            .panel-title.row
              .visible-xs-block
                .col-xs-12.appointment-day-in-words.text-center
                  %h2
                    ="#{time_ago_in_words(appointment.date)} ago"
                  .space-div
                .col-xs-6
                  .appt-date.text-center
                    %h2
                      =appointment.date.strftime("%d")
                  %h4.appt-day.text-center
                    =appointment.date.strftime("%A")
                .col-xs-6
                  .appt-month.text-center
                    %h4
                      =appointment.date.strftime("%B").upcase
                  .appt-year.text-center
                    %h3
                      =appointment.date.strftime("%Y")
              .hidden-xs
                .col-sm-4.text-center
                  .appt-date
                    %h1
                      =appointment.date.strftime("%d")
                  %h3.appt-day
                    =appointment.date.strftime("%A")
                .col-sm-8
                  .appt-day-in-words
                    %h1
                      ="#{time_ago_in_words(appointment.date)} ago"
                  .appt-month
                    %h4
                      ="#{appointment.date.strftime("%B").upcase} #{appointment.date.strftime("%Y")}"
          .panel-body
            .visible-xs-block
              .row
                .col-xs-6.text-center
                  %h4.appt-time-label
                    ="pick up"
                .col-xs-6.text-center
                  %h4.appt-time-label
                    ="drop off"
              .row
                .col-xs-6.text-center
                  %h2.appt-time
                    =appointment.pick_up_time.strftime("%I:%M%p")
                .col-xs-6.text-center
                  %h2.appt-time
                    =appointment.drop_off_time.strftime("%I:%M%p")
            .hidden-xs
              .row
                .col-sm-6.text-center
                  %h5.appt-time-label
                    ="drop off"
                  %h3.appt-time
                    =appointment.drop_off_time.strftime("%I:%M%p")
                .col-sm-6.text-center
                  %h5.appt-time-label
                    ="pick up"
                  %h3.appt-time
                    =appointment.pick_up_time.strftime("%I:%M%p")

            .col-sm-offset-4.col-sm-4.center-text
              = link_to("edit", edit_dashboard_appointment_path(appointment), class: "btn btn-info btn-block btn-outline")




      -#.form-group
        -#.sr-only= "date"
        -#.form-control= appointment.date
      -#.form-group
        -#.sr-only= "drop-off time"
        -#.form-control= appointment.drop_off_time
      -#.form-group
        -#.sr-only= "drop-up time"
        -#.form-control= appointment.pick_up_time
      -#.form-group
        -#.sr-only= "notes"
        -#.form-control= appointment.notes

