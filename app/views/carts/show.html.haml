= title "Shopping Cart"
.section
  .row
    .col-xs-12
      .well.well-primary
        %h3
          shopping cart
        .row
          .col-xs-12
            %table.table
              %tr
                %th Product
                %th Qty
                %th.price Unit Price
                %th.price Full Price
                %th.modify Modify
                - line_item_count = 0
              - for line_item in @cart.line_items
                %tr
                  %td.name= line_item.service_plan.name
                  -line_item_count += line_item.quantity
                  %td.qty= line_item.quantity
                  %td.price= number_to_currency(line_item.unit_price)
                  %td.price= number_to_currency(line_item.full_price)
                  %td.delete= link_to "delete", delete_line_item_path(line_item.id), method: :delete, data: {confirm: "are you sure?"}
              %tr
                %td{:colspan => "5"}
              %tr
                %td.total= "TOTAL"
                %td.qty_total= line_item_count
                %td
                %td.total.price
                  #{number_to_currency @cart.total_price}
                %td

  .row
    .col-xs-6
      =link_to "Continue Shopping", root_path, {class: "btn btn-warning btn-block"}
    .col-xs-6
      =link_to "Checkout", new_order_path, {class: "btn btn-success btn-block"}



